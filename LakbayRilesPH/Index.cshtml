<!DOCTYPE html>

@using LakbayRilesPH;
@using LakbayRilesPH.ClassFiles;
@{
    var currentTime = DateTime.Now;
}

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Lakbay Riles</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="Content/bootstrap.css" rel="stylesheet">

    <link href="css/flat-ui.css" rel="stylesheet">

    <link rel="shortcut icon" href="images/favicon.ico">

</head>

<body>
    <nav class="navbar navbar-default" role="navigation">
        <!--HELLO-->
        <!-- LAKBAY RILES LOGO -->
        <div class="navbar-header" style="padding-left:10px;"><img src="images/lakbayrileslogo_s.png"></div>
        <h1 class="navbar-text" style="color: #fff; font-size:23px;">LRT LINE 1 SYSTEM VIEW</h1>
        <!-- DATE AND TIME -->
        <p class="navbar-text navbar-right" style="color: #fff; padding-right: 20px;">@currentTime</p>
    </nav>
    <div class="container" style="height: 591px;">
        <div class="map">
            <img class="map-photo" src="images/newbackbone.png" style="z-index:1;">
            <br />
            <!-- THIS IS THE PAGE FOR THE ANNOUNCEMENTS -->
            <div class="col-lg-5" style="z-index:3;">
                <!-- ENHANCED ANNOUNCEMENT BOARD -->
                <div id="announcement" class="carousel slide" data-interval="6000" data-ride="carousel">
                    <!-- Carousel items -->
                    <div class="carousel-inner" style="border-radius: 15px; font-weight: 600;">
                        <div class="active item tile" style="background-color: #2c3e50; color:#FFF; height: 180px; overflow:hidden;">
                            <h4>ANNOUNCEMENTS:</h4>
                            <a href="#" data-toggle="modal" style="color:#f1c40f">
                                <p>[As of @currentTime] - <i>No train from EDSA to ROOSEVELT. Kasi naman may magaling na nagpakamatay na Stressed sa buhay.</i></p>
                            </a>
                        </div>

                        <div class="item tile" style="background-color: #2c3e50; color:#FFF; height: 180px; overflow:hidden;">
                            <h4>ANNOUNCEMENTS:</h4>
                            <a href="#" data-toggle="modal" style="color:#f1c40f">
                                <p>[As of @currentTime] - <i>No train from EDSA to ROOSEVELT. Kasi naman may magaling na nagpakamatay na Stressed sa buhay.</i></p>
                            </a>
                        </div>

                        <div class="item tile" style="background-color: #2c3e50; color:#FFF; height: 180px; overflow:hidden;">
                            <h4>ANNOUNCEMENTS:</h4>
                            <a href="#" data-toggle="modal" style="color:#f1c40f">
                                <p>[As of @currentTime] - <i>No train from EDSA to ROOSEVELT. Kasi naman may magaling na nagpakamatay na Stressed sa buhay.</i></p>
                            </a>
                        </div>
                    </div>
                    <!-- Carousel nav -->
                    <a class="carousel-control left" href="#announcement" data-slide="prev" style="border-radius:15px">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="carousel-control right" href="#myCarousel" data-slide="next" style="border-radius:15px">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>


            </div>

            @{
                var stationList = StationList.createStations();

                for (int i = 0; i < stationList.Count; i++)
                {
                    var station = stationList.ElementAt(i);
                    var stationName = "statusModal" + station.idName;
                    var north = StationUpdate.DisplayUpdate(station.stationName, "CV", "north");
                    var south = StationUpdate.DisplayUpdate(station.stationName, "CV", "south");

                    var northCV = "";
                    var northColor = "";
                    if (north.CodeName == "Heavy")
                    {
                        northCV = "H";
                        northColor = "#c0392b";
                    }
                    else if (north.CodeName == "Moderate")
                    {
                        northCV = "M";
                        northColor = "#f39c12";
                    } else if(north.CodeName == "Light")
                    {
                        northCV = "L";
                        northColor = "00ff90";
                    }


                    var southCV = "";
                    var southColor = "";
                    if (south.CodeName == "Heavy")
                    {
                        southCV = "H";
                        southColor = "#c0392b";
                    }
                    else if (south.CodeName == "Moderate")
                    {
                        southCV = "M";
                        southColor = "#f39c12";
                    }
                    else if (south.CodeName == "Light")
                    {
                        southCV = "L";
                        southColor = "00ff90";
                    }
                    
                    <a href="#@stationName" class="status" style="top: @station.top; left: @station.left; background-position: -23px -1px;"></a>

                    <div id="@stationName" class="mainModalDiv">
                        <div class="statusModalDiv">
                            <center>
                                <a href="#close" title="Close" class="close">X</a>
                                <h3 style="border:medium solid; border-radius: 6px;">@station.stationName</h3>
                                <div class="innerDiv">
                                   
                                    <div class="innerDiv2" style="background-color:@southColor; color:#FFF">Southbound: H</div>
                                    <div class="innerDiv2" style="background-color:@northColor; color:#FFF">Northbound: @northCV</div>
                                    <br>
                                    <br>
                             
                                    <p>As of @currentTime</p>
                                </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script src="js/jquery-1.8.3.min.js"></script>
    <script src="js/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="js/jquery.ui.touch-punch.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-select.js"></script>
    <script src="js/bootstrap-switch.js"></script>
    <script src="js/flatui-checkbox.js"></script>
    <script src="js/flatui-radio.js"></script>
    <script src="js/jquery.tagsinput.js"></script>
    <script src="js/jquery.placeholder.js"></script>
</body>
</html>
