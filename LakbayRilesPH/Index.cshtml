<!DOCTYPE html>

@using LakbayRilesPH;
@using LakbayRilesPH.Controller;

@{
    var currentTime = DateTime.Now;
}

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Lakbay Riles</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/flat-ui.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/logoo.png" type="image/x-icon">
</head>

<body>
    <nav class="navbar navbar-default" role="navigation">
        <!--HELLO-->
        <!-- LAKBAY RILES LOGO -->
        <div class="navbar-header" style="padding-left:10px;"><img src="~/images/lakbayrileslogo_s.png" /></div>
        <h1 class="navbar-text" style="color: #fff; font-size:23px;">LRT LINE 1 SYSTEM VIEW</h1>
        <!-- DATE AND TIME -->
        <p class="navbar-text navbar-right" style="color: #fff; padding-right: 20px;">Today is @currentTime</p>
    </nav>
    <div class="container" style="height: 591px;">
        <div class="map">
            <img class="map-photo" src="~/images/newbackbone.png" style="z-index:1;">
            <br />
            <!-- THIS IS THE PAGE FOR THE ANNOUNCEMENTS -->
            <div class="col-lg-5" style="z-index:3; ">
                <div class="tile" style="background-color: white; height: 180px; overflow:hidden; border:solid; border-color:#2c3e50; border-width:5px; border-radius:15px;">
                    <marquee direction="up" speed="10000ms">
                        <center>
                            <h4>ANNOUNCEMENTS:</h4>
                            <p>
                                There is a heavy crowd volume going southbound because a passenger committed suicide in the station.<br />
                                There is a heavy crowd volume going southbound because a passenger committed suicide in the station.<br />
                                There is a heavy crowd volume going southbound because a passenger committed suicide in the station.
                            </p>
                        </center>
                    </marquee>

                </div>
            </div>

            @{
                var stationList = StationList.createStations();

                for (int i = 0; i < stationList.Count; i++)
                {
                    var station = stationList.ElementAt(i);
                    var stationName = "statusModal" + station.idName;
                    <!--BG POSITION-->
                    <a href="#@stationName" class="status" data-toggle="modal" style="top: @station.top; left: @station.left; background-position: -23px -1px;"></a>

                    <!--THIS IS THE LEGIT MODAL FOR THE STATUS OF THE LRT1 STATIONS-->

                    <div class="modal fade" id="@stationName" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header" style="background-color:#2c3e50; color:white;">
                                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <center><h5 class="modal-title" id="myModalLabel">@station.stationName STATION</h5></center>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="tile" style="background-color:#f39c12; color:#FFF">
                                                <br />
                                                <img src="~/images/up_circular-64.png" /><br />
                                                <h6>Northbound</h6>
                                                <p>Waiting Time: 10-15 mins.</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="tile" style="background-color:#c0392b; color:#FFF">
                                                <br />
                                                <img src="~/images/down_circular-64.png" /><br />
                                                <h6>Southbound</h6>
                                                <p>Waiting Time: 15-20 mins.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="tile" style="height:150px; overflow-y:scroll;">
                                                <h6>Announcements:</h6>
                                                <p>
                                                    There is a heavy crowd volume going southbound because a passenger committed suicide in the station.<br />
                                                    There is a heavy crowd volume going southbound because a passenger committed suicide in the station.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer" style="background-color:#2c3e50; color:white;">
                                    <center><i>Station Crowd Volume as of @currentTime</i></center>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script src="~/js/jquery-1.8.3.min.js"></script>
    <script src="~/js/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-select.js"></script>
    <script src="~/js/bootstrap-switch.js"></script>
    <script src="~/js/flatui-checkbox.js"></script>
    <script src="~/js/flatui-radio.js"></script>
    <script src="~/js/jquery.tagsinput.js"></script>
    <script src="~/js/jquery.placeholder.js"></script>
</body>
</html>
